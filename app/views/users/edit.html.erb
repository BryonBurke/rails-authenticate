<h1>Editing User</h1>


<%= form_for @user do |f| %>
<%= f.label "name" %>
<%= f.text_field :name %>
<%= f.label "Email" %>
<%= f.text_field :email %>
<%= f.label "Password" %>
<%= f.password_field :password %>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<%= f.label "Admin?" %>
<%= f.check_box :admin %>
<%= f.submit "Edit" %>
<% end %>

<%= form_for @user do |f| %>
<%= f.label "Upload your photo here" %>
<%= f.file_field :pictures, multiple: true %>
<%= f.submit "Edit" %>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
