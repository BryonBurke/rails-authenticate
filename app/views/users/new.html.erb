<h1>New User</h1>

<h1> Sign up</h1>


<%= form_for @user do |f| %>

<%= f.label "Profile Photo" %>
<%= f.file_field :avatar %>



<%= f.label "name" %>
<%= f.text_field :name %>
<%= f.label "Email" %>
<%= f.text_field :email %>
<%= f.label "Password" %>
<%= f.password_field :password %>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
<%= f.label "Admin?" %>
<%= f.check_box :admin %>
<%= f.submit "Sign Up" %>
<% end %>

<%= link_to 'Back', users_path %>
